<main>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-dark text-white">
               {{#if editMode}}Edicion {{else}}Creacion {{/if}} de Regiones
            </div>
            <div class="card-body">
               <form method="post" action="{{#if editMode}}/edit-regiones{{else}}/create-regiones{{/if}}">
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Nombre de la region</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" placeholder="Nombres" name="Name" value="{{#if editMode}}{{region.name}}{{/if}}" required>
    </div>

    {{#if editMode}}

<input type="hidden" name="regionId" value="{{region.id}}">

    {{/if}}
  </div>
  <div class="form-group row">
    <center>
    <div class="col-sm-10">
      <button class="btn btn-primary">{{#if editMode}}Editar{{else}}Guardar{{/if}}</button>
      <a href="/regiones" class="btn btn-warning">Atras</a>
    </div>
    </center>
  </div>
</form>
            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>

</main>